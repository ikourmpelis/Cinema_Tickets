@model OnlineMovieTicketBooking.Models.ViewModels.HallCreateViewModel

@{
    ViewData["Title"] = "CreateHall";
}

<h2 class="alert alert-info">Create a Hall</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateHall">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Hall Name
                <input asp-for="HallName" class="form-control" />
                <span asp-validation-for="HallName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Large" /> Check this for large hall
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


