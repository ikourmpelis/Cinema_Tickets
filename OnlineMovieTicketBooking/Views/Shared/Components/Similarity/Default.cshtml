@model OnlineMovieTicketBooking.Models.MovieDetails
@using Microsoft.AspNetCore.Identity;
@TempData["Test"]
@{

    if (Model != null)
    {
        <div class="card">
            <div class="card-header w-100 text-muted">
            

                    <p style="color:#20c997"> <strong>@User.Identity.Name</strong> You may like this movie.....</p>

            </div>
            <div class="row no-gutters">
                <div class="col-auto">
                    <img src="@Model.MoviePicture" class="img-responsive" width="100" asp-append-version="true">
                </div>
                <div class="col">
                    <div class="card-block px-2">
                        <h4 class="card-title">@Model.Movie_Name</h4>
                        <p class="card-text">@Model.Movie_Description</p>
                        <p class="card-text" align="right"><a asp-controller="Movie" asp-action="Index" asp-route-query="@Model.Movie_Name">More Details.....</a></p>

                    </div>
                </div>
            </div>

        </div>
    }
}